# ===================================
# CONFIGURACIÓN DEL SERVIDOR
# ===================================
PORT=5000
NODE_ENV=development

# URLs públicas (para callbacks de pago)
BACKEND_PUBLIC_URL=http://localhost:5000
FRONTEND_PUBLIC_URL=http://localhost:5173

# ===================================
# FIREBASE
# ===================================
# Opción 1: JSON directo (escapa las comillas)
# FIREBASE_SERVICE_ACCOUNT_JSON={"type":"service_account",...}

# Opción 2: Base64 (recomendado para Render/Heroku)
# FIREBASE_SERVICE_ACCOUNT_BASE64=eyJ0eXBlIjoic2Vyd...

# Opción 3: Path a archivo (desarrollo local)
# FIREBASE_SERVICE_ACCOUNT_PATH=./firebase-credentials.json

FIREBASE_PROJECT_ID=tu-proyecto-id
# FIREBASE_USE_STORAGE=true
# FIREBASE_STORAGE_BUCKET=tu-proyecto.appspot.com

# ===================================
# AUTENTICACIÓN
# ===================================
JWT_SECRET=cambia-este-secreto-en-produccion-usa-algo-largo-y-aleatorio
JWT_EXPIRES_IN=7d

# ===================================
# EMAIL (RESEND)
# ===================================
# RESEND_API_KEY=re_xxxxxxxxxxxx
MAIL_FROM=Tu Tienda <noreply@tudominio.com>
MAIL_REPLY_TO=contacto@tudominio.com
ORDER_NOTIFICATION_EMAIL=ventas@tudominio.com

# ===================================
# PAGOS - WEBPAY (TRANSBANK)
# ===================================
TRANSBANK_ENV=integration
# Para producción:
# TRANSBANK_ENV=production
# TBK_API_KEY_ID=tu-codigo-comercio
# TBK_API_KEY_SECRET=tu-api-key-secret

# ===================================
# ALMACENAMIENTO - CLOUDINARY
# ===================================
# CLOUDINARY_CLOUD_NAME=tu-cloud-name
# CLOUDINARY_API_KEY=tu-api-key
# CLOUDINARY_API_SECRET=tu-api-secret

# ===================================
# CORS (opcional, separados por coma)
# ===================================
# CORS_ORIGIN=https://tudominio.com,https://www.tudominio.com
